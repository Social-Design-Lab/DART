mixin navButtons(backLink, nextLink, percent, backText='Back', nextText='Next', skipBtn=false, skipLink)
  .ui.container#nav-container
    .div#nav-menu
      button.ui.huge.basic.button.left.floated#backButton(onclick="location.href='" + backLink + "';")
        i.arrow.left.icon
        | #{backText}
      button.ui.huge.blue.button.right.floated#nextButton(onclick="postModuleProgress('" + nextLink + "', '" + percent + "');")
        | #{nextText}
        i.arrow.right.icon
      if skipBtn
        button.ui.huge.basic.button.right.floated#skipButton(onclick="location.href='" + skipLink + "';")
          | Skip
