extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  
  .ui.container.resultsAddBottomMargin
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment.reflectionTopSegment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
              
          .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection1
            i.down.arrow.icon
            |   Start
          .ui.basic.segment.reflectionPromptSegment.hidden.noPadding.selectPostsQuestion1  
            .ui.label.resultsPromptLabel
              h4
                i.exclamation.triangle.icon.yellowIcon
                | These were the trolls. How many did 
                | you notice?
            h3.grayElement
              i.hand.pointer.icon
              | Click on the ones that you noticed!
            .ui.stackable.three.cards.selectablePosts
              
              .ui.fluid.card.dim()#card1
                .content
                  .right.floated.time 1 hour ago
                  a(href='/AmyG/trolls')
                    img.ui.avatar.image(src='/profile_pictures/amy.jpg')
                    span Amy G
                .image
                  img.post(src='/profile_pictures/amy_back.jpg' style='height:150px;')
                .content
                  .description

                    
              .ui.fluid.card.dim()#card2
                .content
                  .right.floated.time 1 hour ago
                  a(href='/BlueLiveMatter1/trolls')
                    img.ui.avatar.image(src='/profile_pictures/blue_live.jpg')
                    span BlueLiveMatter1
                .image
                  img.post(src='/profile_pictures/blue_live_background.jpg' style='height:150px;')
                .content
                  .description.
           
 
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection2
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionCheckboxesPrompt(data-questionNumber='Q1')
                  | Tell us what you did to distinguish trolls:
              .content.checkOne
                .ui.form
                  br
                  .inline.fields
                    label(for='iFlagged', name='iFlagged') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='iFlagged', tabindex='0') 
                          | Missing a profile photo or contain a photo that looks like a stock image from the Internet.
                .ui.form
                  .inline.fields
                    label(for='iLiked', name='iLiked') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='iLiked', tabindex='0') 
                          | Account usernames that seem automatically generated or contain misspellings is another red flag.
                .ui.form
                  .inline.fields
                    label(for='iSupported', name='iSupported') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='iSupported', tabindex='0') 
                          | Lacking a biography.
                .ui.form
                  .inline.fields
                    label(for='wouldTell', name='wouldTell') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='wouldTell', tabindex='0') 
                          | Use divisive and inflammatory language so as to spark debate and cause frustration for other users.
      
              .ui.basic.segment.noPadding
                .ui.basic.segment.noPadding.reflectionPromptSegment
                  .ui.label.resultsPromptLabel
                    h4.reflectionPrompt(data-questionNumber='Q2')
                      | What other clues did you recognize?
                  .ui.form
                    .inline.fields
                      label
                      textarea.glowing-border(rows='4' id="cyber_responseOne")
                        
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection3
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt(data-questionNumber='Q3')
                  | #{reflectionData.trolls.Q3.prompt}
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='4' id="cyber_responseTwo")

        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection4
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt(data-questionNumber='Q4')
                  | What will you do in the future if you see trolls?
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='4' id="cyber_responseThree")

    .ui.warning.message.hidden.startPromptsWarning
      .header
        | Click "Start"
    .ui.warning.message.hidden.openAllPromptsWarning
      .header
        | Click "Next"
    //- include ../partials/optInToShareActivityData.pug
    br
    .ui.big.labeled.icon.button.results_print(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.labeled.icon.button.resultsContinueButton
          i.rocket.icon
          |   Continue
      
