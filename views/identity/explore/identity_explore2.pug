extends ../../module_layout

block content
  .ui.container#raised-container
    .limit
        br
        .into-container 
            p I'm glad you've arrived, while you were busy learning we've received some emails for you.
            p Let me take you to your email inbox and provide you with a quick tour.
            <br>
        .avatar-container(style="text-align: center;")
            img#dart_image1.ui.medium.image(src='/profile_pictures/transparent.png' style="text-align: center; display: block; margin: 0 auto;")


    script.
        var progress = #{user.moduleProgress.identity.percent}
    script(src='/js/setProgressBar.js')  

block append footer
  .ui.container
    +navButtons('identity', 'explore2', '/explore/identity', '/explore3/identity', 66, 'Back', 'Start Tour')  

block scripts
    script(src='/js/character.js')
    script.
        postStartTime("identity", "explore2");