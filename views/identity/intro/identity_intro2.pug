block content

  .ui.container#raised-container
    .limit
      p There are six amazing badges for you to earn!

      //- semantic ui grid to organize the badges properly
      .ui.computer.only.tablet.only.grid#badgesGrid
        .four.column.row
          .column 
            .content
              img(src='/badges/identity/mystery_badge.png')
              p Challenge
