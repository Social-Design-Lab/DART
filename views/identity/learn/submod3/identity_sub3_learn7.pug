extends ../../../module_layout

block content

  .ui.container#raised-container
    .limit
      h1.ui.header.large#learn-title
        .content
          | When you have your identity stolen
      h2 For Tax Identity Theft
      .ui.bulleted.list 
        .item If you know or suspect you are a victim of tax-related identity theft, the IRS recommends these actions.
          .list 
            .item Respond immediately to any IRS notice: Call the IRS number provided.
            .item Visit <a href="https://www.irs.gov/identity-theft-central" class="visitLink">IRS Identity Theft Central</a> if any fraudulent activities regarding tax are made. You can also call 800-908-4490 for assistance.  

    script.
        var progress = #{user.moduleProgress.identity.percent}
    script(src='/js/setProgressBar.js')  

block append footer
  .ui.container
    +navButtons('identity', 'sub3_learn7', '/submod3/learn6/identity', '/submod3/learn8/identity', 74)  


block scripts
  script.
    postStartTime("identity", "sub3_learn7");