extends ../ui_layout

block content

  .ui.text.container.addBottomMargin
    .ui.raised.segment
        img.ui.medium.image(src='/images/practice_progress_bar.png' style='margin-left: auto; margin-right: auto')
        h3.ui.header
            .content
                b If you receive the email above, WHAT SHOULD YOU BE THINKING? Select all that apply. 
        img.ui.image(src='/images/methodOfProtectionPracticeQuestion.png')
        form.ui.form(style="width: 100%", action='/postIdentityTheftModThreeQuizScore', method='POST', form name="questionForm")
            input(type='hidden', name='username', value=user.username)
            input(type='hidden', name='_csrf', value=csrfToken)
            .field
                #b1.ui.checkbox(style='border-style: solid; border-color: grey; padding: 15px; width: 100%')
                    input.hidden(type='checkbox' id = 'c1' name='answer1' value = 'a1')
                    label When this email asks you to click a link, be alert. That could be a scam.
            .field
                #b2.ui.checkbox(style='border-style: solid; border-color: gray; padding: 15px; width: 100% ; color: green')
                    input.hidden(type='checkbox' id = 'c2' name='answer2' value = 'a2')
                    label Ask the question: do I have the account with the company? Did you submit a ticket to the company? If the answer is no, deleter the email immediately.
            .field
                #b3.ui.checkbox(style='border-style: solid; border-color: grey; padding: 15px; width: 100%')
                    input.hidden(type='checkbox' id = 'c3' name='answer3' value = 'a3')
                    label If you have the account with this company, carefully examine the sender's email address. If the email address is not correct, delete the email.
            .field
                #b4.ui.checkbox(style='border-style: solid; border-color: grey; padding: 15px; width: 100%')
                    input.hidden(type='checkbox' id = 'c4' name='answer4' value = 'a4')
                    label If you still could not identify whether the email address is authentic or not, contact the company to inform. Remember using a phone number or website you know is real -- not the information in the email.
            #submitQuestion.ui.green.button(onclick ='checkQuestion()', style='float: right') Check Answers
            #correctness.ui.label.right.floated(style='clear: both; width: 100%; float: right; display: none')
                p#score(style='float:right') 1.0/1 points
            input(type='hidden', name='scoreInput', value='0', id='scoreInput')
            h1
            h1
            button#testing.ui.button.right.floated(type='submit', style='clear: both')
                | Next
                i.arrow.right.icon
        .ui.div
            button.ui.button.left.floated(onclick="location.href='/identity_learn_page25';") 
                i.arrow.left.icon 
                | Back
            button.ui.button.left.floated(onclick="location.href='/';") Save & Exit

block scripts
  script.

    function showYes(){
      var hid = document.getElementById("understand");
      hid.style.visibility = "visible";
      hid = document.getElementById("understand_button");
      hid.style.visibility = "hidden";
      hid = document.getElementById("yay");
      hid.style.visibility = "visible";
      hid = document.getElementById("topics_group");
      hid.style.visibility = "visible";
    }

    function showTopic(name){
      document.getElementById("topic_text").innerHTML = name;
      var hid = document.getElementById("topics_group");
      hid.style.visibility = "hidden";
      hid = document.getElementById("topic");
      hid.style.visibility = "visible";
      hid = document.getElementById("topic_response1");
      hid.style.visibility = "visible";
      hid = document.getElementById("topic_response2");
      hid.style.visibility = "visible";
    }

    function checkQuestion(){
      document.getElementById("submitQuestion").style.display = "none";
      let x = 0;
      if(document.getElementById("c1").checked) {
        document.getElementById("b1").style.borderColor="green";
        x = x + .25;
      }
      else document.getElementById("b1").style.borderColor="red";
      if(document.getElementById("c2").checked) {
        document.getElementById("b2").style.borderColor="green";
         x = x + .25;
      }
      else document.getElementById("b2").style.borderColor="red";
      if(document.getElementById("c3").checked) {
         document.getElementById("b3").style.borderColor="green";
          x = x + .25;
      }
      else document.getElementById("b3").style.borderColor="red";
      if(document.getElementById("c4").checked) {
        document.getElementById("b4").style.borderColor="green";
         x = x + .25;
      }
      else document.getElementById("b4").style.borderColor="red";
      document.getElementById("score").innerHTML = x + " / 1.00 points";
      document.getElementById("correctness").style.display = "block";
      document.getElementById('scoreInput').value = x +  " / 1.00 points";
    }

