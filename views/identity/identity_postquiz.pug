  script.
    function checkQuestion(){
      document.getElementById("submitQuestion").style.display = "none";
      let x = 0;
      if(document.getElementById("c4").checked) {
        x++;
      } 
      document.getElementById("b1").style.borderColor="green";
      document.getElementById("b2").style.borderColor="red";
      document.getElementById("b3").style.borderColor="red";
      document.getElementById("b4").style.borderColor="red";

      document.getElementById("b5").style.borderColor="red";
      document.getElementById("b6").style.borderColor="green";
      document.getElementById("b7").style.borderColor="red";
      document.getElementById("b8").style.borderColor="red";

      document.getElementById("b9").style.borderColor="red";
      document.getElementById("b10").style.borderColor="red";
      document.getElementById("b11").style.borderColor="green";
      document.getElementById("b12").style.borderColor="red";

      if(document.getElementById("c1").checked) {
        x++;
      } 
      if(document.getElementById("c6").checked) {
        x++;
      } 
      if(document.getElementById("c11").checked) {
        x++;
      } 
      document.getElementById("score").innerHTML = x.toFixed(2) + " / 3.00 points";
      document.getElementById("correctness").style.display = "block";
      document.getElementById('scoreInput').value = x +  " / 3.00 points";
    }


