block scripts
  script.
    function checkQuestion(){
      document.getElementById("submitQuestion").style.display = "none";
      let x = 0;
      if(document.getElementById("c1").checked) {
        x++;
      } 
      document.getElementById("b1").style.borderColor="green";
      document.getElementById("b2").style.borderColor="red";


      if(document.getElementById("q2c1").checked) {
        x = x + 0.33333333333;
      } 
      if(document.getElementById("q2c2").checked) {
        x = x + 0.33333333333;
      } 
      if(document.getElementById("q2c3").checked) {
        x = x + 0.33333333333;
      } 
      document.getElementById("b3").style.borderColor="green";
      document.getElementById("b4").style.borderColor="green";
      document.getElementById("b5").style.borderColor="green";
      document.getElementById("b6").style.borderColor="red";
      document.getElementById("b7").style.borderColor="red";

      document.getElementById("score").innerHTML = x.toFixed(2) + " / 2.00 points";
      document.getElementById("correctness").style.display = "block";
      document.getElementById('scoreInput').value = x +  " / 2.00 points";
    }


