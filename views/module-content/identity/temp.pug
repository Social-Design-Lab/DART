extends ../../module_layout

block content
    //- p #{module}
    //- p #{section}
    //- p #{page}
    .ui.container#raised-container
        .limit#learn-target(style="padding: 0;")
            .ui.grid.computer.only
                .ten.wide.column
                    h1.ui.header.large#learn-title
                        i.bullseye.icon
                        | Learning Targets
                    ul.no-bullets
                        li
                            img(src="/images/dart-bullet.svg", alt="Bullet Point")
                            | Understand the basics of identity theft

                        li
                            img(src="/images/dart-bullet.svg", alt="Bullet Point")
                            | Discover what information scammers are after
                .six.wide.column
                    .villain-container
                        img.villain-image(src='/images/villains.png')
                        img.villain-reveal.hidden(src='/images/villains-reveal.png')
            .ui.grid.tablet.only.mobile.only
                .row
                    h1.ui.header.large#learn-title
                        i.bullseye.icon
                        | Learning Targets

                ul.no-bullets(style="text-align: left;")
                    li
                        img(src="/images/dart-bullet.svg", alt="Bullet Point")
                        | Understand the basics of identity theft

                    li
                        img(src="/images/dart-bullet.svg", alt="Bullet Point")
                        | Discover what information scammers are after

                .row
                    .villain-container(style="margin: 0 auto;")
                        img.villain-image(src='/images/villains.png')
                        img.villain-reveal.hidden(src='/images/villains-reveal.png')
        //- Fill progress bar to correct percent and color 
        script.
            var progress = #{user.moduleStatus.identity.concepts}
        script(src='/js/setProgressBar.js')  
    else if page === 'video'
        .ui.container#raised-container.center-layout
            .limit
            h1.ui.header.large#learn-title
                .content
                i.video.icon
                | Intro
            p Click the image to start the video
            video-js#my_video_1.video-js.vjs-default-skin.vjs-show-big-play-button-on-pause(width='640px' height='360px' controls='' preload='none' data-setup='{ "poster":"/images/warning-poster.png", "aspectRatio":"16:9", "playbackRates": [0.5, 0.75, 1, 1.5, 2] }')
                source(src='https://dart-store.s3.amazonaws.com/identity-warning.mp4' type='video/mp4')

block append footer
  .ui.container
    +navButtons('identity', 'sub_learn', '/about/identity', '/learn/submod/2/identity', 12, 'Back', 'Start Chapter 1')  

block styles 
  link(rel='stylesheet', href='/css/learning-targets.css')
  link(rel='stylesheet', href='/css/middle-aligned-layout.css')

block scripts
  script.
    postStartTime("identity", "sub_learn");
    $('#header-section').text("Concepts");
  script(src='/module_js/identity/villain-reveal.js')