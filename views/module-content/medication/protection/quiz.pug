#quiz.hidden
    .ui.container.quizContainer#raised-container(style="padding: 0px;")
        .limit
            .quiz-container   
                br
                h1.ui.header.large#learn-title(style="margin-top: -10px;")
                    .content
                        i.edit.icon
                        span#narrate-title-quiz Quiz         

                .question#narrate-1-quiz(style="margin-bottom: 20px;")
                    span

                .htmlImage(style="margin-bottom: 20px;")
                .image
                .choiceList
                .fourChoices 

                .checkboxChoices            
                br
                br
                .result   
                    .circleResults
                        strong#showResults  
                    .resultText
                    br
                    br
                .quizMessage
                    .ui.red.center.aligned.message
                        i.close.icon
                        .errorMessage.header
                .explanationCorrectMulti
                    button.ui.basic.blue.right.labeled.icon.button.explainButtonCorrect
                        i.right.caret.icon
                        a Show Explanations
                    p.correctScore
                    h2.ui.header.correctOrIncorrect
                        i.check.circle.green.large.icon
                        | Correct
                .explanationIncorrectMulti
                    button.ui.basic.blue.right.labeled.icon.button.explainButtonIncorrect
                        i.right.caret.icon
                        a Show Explanations
                    p.incorrectScore
                    h2.ui.header.correctOrIncorrect
                        i.times.circle.red.large.icon
                        | Incorrect
                    p.yourAnswers
                    p.theAnswers
                .explanationCorrectYesNo
                    p.correctScore
                    h2.ui.header
                        i.check.circle.green.large.icon
                        | Correct
                    .ui.green.message 
                        p.correctExplanation
                    br
                    br
                .explanationIncorrectYesNo
                    p.incorrectScore
                    h2.ui.header
                        i.times.circle.red.large.icon
                        | Incorrect
                    .ui.red.message 
                        p.incorrectExplanation
                    br
                    br
                .quizButtonContainer(style="margin-top: -20px;")
                    .ui.blue.huge.button.preButton#narrate-try-again Previous Question
                    .ui.blue.huge.button.viewAnswers#narrate-view-answers View Answers
                    .ui.blue.huge.button.nextButton#narrate-next Next Question
            .ui.tablet.only.centered.grid
                .avatar-container
                    img#dart_image1.ui.medium.image(src=user.avatarImg alt="image of your avatar")