extends ../../ui_layout

block content
  .ui.container
    br
    .ui.breadcrumb
      a.section(href="/") Home
      i.right.angle.icon.divider
      a.section(href="/courses") Missions
      i.right.angle.icon.divider
      .active.section Medication Scams
    br
    h1.ui.header.red#mod-title(style="font-weight: bold !important;") Medication Scams
    .ui.top.attached.fluid.segment
      .ui.grid 
        .row
          .eight.wide.column#classification
            strong CLASSIFICATION: 
            | TOP SECRET 
          .eight.wide.column#classified-by 
            strong CLASSIFIED BY: 
            | DART HQ
    .ui.attached.segment#middle-section-outline
      .ui.grid 
        .row 
          .twelve.wide.column
            p Sarah needs your help! Sheâ€™s fallen victim to a cunning medication scam.
            p Uncover how scammers pose as distressed grandchildren to manipulate their targets into sending money. You'll learn how these scams work, how to spot them, and how to protect yourself and others.
            if user.moduleProgress.medication.link === "/course-player?module=medication&section=challenge&page=intro" 
              button.ui.huge.blue.button(onclick="window.location=user.moduleProgress.medication.link") Start Mission
            else 
              button.ui.huge.blue.button(onclick="window.location=user.moduleProgress.medication.link") Continue Mission

          .four.wide.column 
            img(src=`${public_resources}/images/shared_sources/johnson.png`)
      br

      hr
      
      h2.ui.header.centered#learn-title(style="font-weight: 500 !important;")  
        .content
          i.search.icon
          | Activities
      .ui.vertical.basic.segments#course-outline
        .ui.basic.segment
          .ui.grid
            .row
              .two.wide.centered.column
                if(user.moduleStatus.medication.challenge === 100)
                  span.fake-checkbox.completed
                else
                  span.fake-checkbox
              .nine.wide.column
                h3 Challenge
              .five.wide.right.aligned.column
                .ui.blue.inverted.button.small(onclick="window.location='/course-player?module=medication&section=challenge&page=intro'") Start
        .ui.divider
        .ui.basic.segment
          .ui.grid
            .row
