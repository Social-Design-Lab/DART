      h2.ui.header.centered(style="margin-top: 40px; margin-bottom: 40px;") 
        .content(style="position: relative;")  
          | Complete all activities to earn a certificate
          img(src=`${public_resources}/images/shared_sources/certificate-icon.png` style="width: 50px; height: 50px; position: absolute; left: -55px; top: -5px")

    .ui.bottom.attached.segment
      h2(style="color: #285362; font-weight: 500 !important;") Learning Materials 
      p If you would like to learn the material offline, you can download the content below:
      div.ui.two.column.stackable.grid#downloadGrid
        .column
          h3.glossary.pdf Grandparent Scams Course PDF
          a.ui.inline.fluid.labeled.icon.button(href='/pdf/grandparent-glossary.pdf', download='grandparent_theft.pdf')
            i.download.icon.graySquare
            .inline
              p Download Course PDF

        .column
          h3.glossary.pdf Grandparent Scams Glossary PDF
          a.ui.inline.fluid.labeled.icon.button(href='/pdf/grandparent-glossary.pdf', download='glossary.pdf')
            i.download.icon.graySquare
            .inline
              p Download Glossary PDF
                //- i.large.download.icon
      br
    .ui.grid.computer.only.tablet.only#avatar-encourage-start
      .row
        .sixteen.wide.column
          .speech-div
            .centerme
              if user.moduleProgress.medication.link === "/course-player?module=medication&section=challenge&page=intro" 
                button.ui.massive.blue.button(onclick="window.location=user.moduleProgress.medication.link") Start Mission
              else 
                button.ui.massive.blue.button(onclick="window.location=user.moduleProgress.medication.link") Continue Mission

            img.dart_image.ui.medium.image(src=user.avatarImg)

            .ui.large.label.blue-pointing#speechBubble
              if user.moduleProgress.medication.link === "/course-player?module=medication&section=challenge&page=intro" 
                p#speechText
                  | Sarah is counting on you! Click 'Start Mission' to begin. 
              else 
                p#speechText
                  | Welcome back! Click 'Continue Mission' to pick up where you left off.
    .ui.centered.grid.mobile.only
      if user.moduleProgress.medication.link === "/course-player?module=medication&section=challenge&page=intro" 
        button.ui.massive.blue.button(onclick="window.location=user.moduleProgress.medication.link" style="margin-top: 0px; margin-bottom: 60px;") Start Mission
      else 
        button.ui.massive.blue.button(onclick="window.location=user.moduleProgress.medication.link" style="margin-top: 0px;  margin-bottom: 60px;") Continue Mission

    br
    br
