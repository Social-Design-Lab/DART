                        span#narrate-1-objectives
                            span Objectives:

                ul.no-bullets(style="text-align: left;")
                    li
                        img(src=public_resources + "/images/shared_sources/dart-bullet.svg", alt="Bullet Point")
                        span#narrate-2-objectives
