            .two.fields(style="display: flex; margin-left: 10%;")
              .field
                .ui.radio.checkbox
                      img.lazy(src="/profile_pictures/"+"Intrepid_PT_Determined1.png"  data-src="/profile_pictures/Intrepid_PT_Determined.png")
