extends ../ui_layout

block content
  -var user_post = []
  -var textSize = 0;
  -var user_info = [{profile_pic : "/profile_pictures/amy.jpg",background_pic : "/profile_pictures/blueToWhite.png",user_name : "Amy G",user_id : "@amyg__g",bio : "Daughter. Sister. Proud Black American. I tend to get political.",location : "New York, NY",join_date : "Joined January 2019"}]
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
    //-####################### title
  .computer.only.tablet.only.four.wide.column 
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column( style="margin-bottom:5%")
    .ui.one.column.centered.grid.feedbackMessagesGrid
    .ui.fluid.card.dim(style = "margin-top:0px;margin-bottom:0px;")

      span.br( style="font-size: 25px; margin-left: 5%;margin-bottom: 5%; margin-top: 5%; font-weight: bold;") Edit Profile
      form.ui.form(style="margin-right: 10%; margin-left: 10%;")
        .field
           
            label(for='password' style="font-size:larger;") ID: &nbsp;#{user.username},
            div(style="display: flex; align-items: center;")
                label(for='username' style="font-size:larger;") Name: &nbsp;
                input(style="margin:5px 0px; margin-bottom: 5%; width: 70%; border-radius: 5px; border: 2px solid grey !important; background-color: #fff !important; color: #000 !important;" type='text', name='username', id='username', placeholder='Username', required).field
            a.forgot(href='forgotPassword', style="text-align: right;") Forgot Password?
            
      span#textSizeDisplay.br(style="font-size: 25px; margin-left: 5%;margin-bottom: 5%; margin-top: 5%; font-weight: bold;") Text size: #{textSize}
      input(style="width:70%; margin-right: 10%; margin-bottom: 10%; margin-left: 10%;" type='range', name='textSize', id='textSize', min='1', max='100', step='1', value='24', required, oninput="updateTextSizeDisplay()")
    
    form.ui.form(style="width: 100%", action='/identityConfidenceRating', method='POST')
      input(type='hidden', name='username', value=user.username)
      input(type='hidden', name='_csrf', value=csrfToken)
      .field
        .ui.radio.checkbox(style='border-style: solid; border-color: grey; padding: 15px; width: 100%')
          input.hidden(type='radio' name='confidence' value = 'not_confident' id='radio1')
          label I don't understand
      .field
        .ui.radio.checkbox(style='border-style: solid; border-color: grey; padding: 15px; width: 100%')
          input.hidden(type='radio' name='confidence' value = 'okay_confident')
          label I'm okay
      .field
        .ui.radio.checkbox(style='border-style: solid; border-color: grey; padding: 15px; width: 100%')
          input.hidden(type='radio' name='confidence' value = 'yes_confident')
          label I'm confident
      button.ui.green.button(type='submit')

      form.ui.profilePicForm.form 
        .ui.segment
            .two.fields
              .field
                .ui.radio.checkbox
                  input.hidden(type='radio' name='profilepicinput' value="Daring_PT_Determined.png")
                  label
                      img.lazy(src="/profile_pictures/"+"Daring_PT_Determined.png" data-src="/profile_pictures/"+"Daring_PT_Determined.png")
                      button.ui.secondary.button(onclick="window.location.href='/account'" style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);") Select
              .field
                .ui.radio.checkbox
                  input.hidden(type='radio' name='profilepicinput' value="Dartie_Happy_3.png")
                  label
                      img.lazy(src="/profile_pictures/"+"Dartie_Happy_3.png" style="width: 120%;" data-src="/profile_pictures/Dartie_Happy_3.png")
                      button.ui.secondary.button(onclick="window.location.href='/account'" style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);") Select
            .two.fields
              .field
                .ui.radio.checkbox
                  input.hidden(type='radio' name='profilepicinput' value="Intrepid_PT_Determined.png")
                  label
                      img.lazy(src="/profile_pictures/"+"Intrepid_PT_Determined.png"  data-src="/profile_pictures/Intrepid_PT_Determined.png")
                      button.ui.secondary.button(onclick="window.location.href='/account'" style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%) ;")  Select
              .field
                .ui.radio.checkbox
                  input.hidden(type='radio' name='profilepicinput' value="Valiant_PT_Determined.png")
                  label
                      img.lazy(src="/profile_pictures/Valiant_PT_Determined.png" data-src="/profile_pictures/Valiant_PT_Determined.png")
                      button.ui.secondary.button(onclick="window.location.href='/account'" style="position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);") Select

      
      button.ui.secondary.button(style="margin-top: 1%") I prefer to have the journey myself
block scripts
  script.
    function updateTextSizeDisplay() {
        const textSizeInput = document.getElementById('textSize');
        const textSizeDisplay = document.getElementById('textSizeDisplay');
        textSizeDisplay.textContent = `Text size: ${textSizeInput.value}px`;
        textSizeDisplay.style.fontSize = `${textSizeInput.value}px`;
    }
    updateTextSizeDisplay();


